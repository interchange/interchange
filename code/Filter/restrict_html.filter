CodeDef restrict_html Filter
CodeDef restrict_html Routine <<EOR
sub {
	my $val = shift;
	shift;
	my %allowed;
	$allowed{lc $_} = 1 for @_;
	$val =~ s{<(/?(\w[-\w]*)[\s>])}{ ($allowed{lc $2} ? '<' : '&lt;') . $1 }ge;
	return $val;
}
EOR
