CodeDef pgbool Filter
CodeDef pgbool Routine <<EOR
sub {
	my $val = shift;
	return 'f' if ! defined($val);
	$val =~ s/\s+//g;
	return 'f' if $val =~ /^(?:0|f(?:alse)?)?$/i;
	return 't';
}
EOR
