CodeDef strftime Filter
CodeDef strftime Routine <<EOR
sub {
	my $time = shift(@_);
	shift(@_);
	my $fmt = shift(@_);
	while(my $add = shift(@_)) {
		$fmt .= " $add";
	}
	if($fmt) {
		return POSIX::strftime($fmt, localtime($time));
	}
	else {
		return scalar localtime($time);
	}
}
EOR
