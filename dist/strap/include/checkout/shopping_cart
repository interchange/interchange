		my $db = $Db{pay_certs};
		my $pcamt = 0;
		for(split /\0+/, $Values->{use_pay_cert}) {
			$pcamt += $db->field($_ , 'amount');
		}
		my $tc = $Scratch->{tc};
		$pcamt = $tc < $pcamt ? $tc : $pcamt;
		$Tag->tmp('certs', $pcamt);
		return;
	[/perl]
